{% set position = position|default('top') %}
{% set tooltip = tooltip|default('') %}

{% set classes = '' %}
{% set classes = classes ~ ' Tooltip-text--' ~ position %}

<div class='Tooltip'>
  <span class='Tooltip-icon'>{{ source("/icons/help.svg") }}</span>
  <span class='Tooltip-text{{ classes }}'>
    <span class='Tooltip-close'>{{ source("/icons/close.svg") }}</span>
    {{ tooltip }}
  </span>
</div>
