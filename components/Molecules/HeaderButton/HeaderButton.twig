<button class='HeaderButton {% if inactive %}HeaderButton--inactive{% endif %} {{ classes }} {% if small %}HeaderButton--small{% endif %} {% if mobile %}HeaderButton--mobile{% endif %}'>
  <div>
    {% if icon %}
      <span class='HeaderButton-icon'>{{ source("/icons/" ~ icon ~ ".svg") }}</span>
    {% endif %}

    <div class='flex flex-col items-start HeaderButton--text'>
      <span>{{ text }}</span>
      {% if subText and not mobile %}
        <span class='HeaderButton-sub'>{{ subText }}</span>
      {% endif %}
    </div>
  </div>
</button>
