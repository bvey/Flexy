{% set options = options|default([]) %}
{# options:  [{ value: 1, color: '#6969B3', label: 'State Blue' }, ...] #}

{% set optionsColors = [] %}
{% for option in options %}
	{% set optionsColors = optionsColors|merge([{
    'value': option.value,
    'label':  "<span class='colorRounded' data-bg-color='" ~ option.color ~ "'></span>" ~ option.label
  }]) %}
{% endfor %}

<div class='hidden md:flex gap-2 flex-wrap'>
	{% for option in options %}
		{% include '@components/Molecules/Filters/FilterPill/FilterPill.twig' with option|merge({customText: option.label,icon: 'circle',inputType: 'radio', name: 'color', value: option.value, iconColor: option.color}) %}
	{% endfor %}
</div>
<div class='md:hidden'>
  {% include '@components/Molecules/Filters/FilterSelect/FilterSelect.twig' with {id: 'colorFilterSelect', options: optionsColors} %}
</div>
