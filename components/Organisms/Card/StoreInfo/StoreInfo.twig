<div class='StoreInfo'>
  <div class='StoreInfo-title'>{{ storeName }}</div>
  <div class='StoreInfo-address'>
    <span>{{ address.address1 }},</span>
    {% if address.address2 %}<span>{{ address.address2 }},</span>{% endif %}
    <div>{{ address.zipCode }} {{ address.city }}</div>
  </div>
  <div class='lg:flex justify-between align-center'>
    <button class='StoreInfo-hours'>{{ source("/icons/clock.svg") }}Horaires</button>
    <div class='hidden lg:block'>
      {% include '../../../Molecules/Button/Button.twig' with {text: 'Choisir ce magasin', classes:'Button--fill lg:Button--unfill'} %}
    </div>
  </div>
  <div class='StoreInfo-hoursListing hidden'>
      {% for hour in hours %}
        <div>{{ hour.day }}</div>
        <div>{{ hour.hours }}</div>
      {% endfor %}
  </div>
  <div class='lg:hidden mt-4'>
    {% include '../../../Molecules/Button/Button.twig' with {text: 'Choisir ce magasin', classes:'Button--fill'} %}
  </div>
</div>
