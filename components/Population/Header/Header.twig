<header class='Header py-[15px] flex md:justify-between md:py-0 md:pl-[30px] h-[80px]'>
  <div class='flex'>
    {% if type == "searchbar" %}  
      <div class='hidden lg:block xl:hidden'>
        {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'menu', text: 'Cart', classes: 'HeaderButton--light', small: true } %}
      </div>
    {% endif %}
    
    <div class='self-center h-full'>
      <div class='mx-auto h-full py-[25px] md:mx-0 Header-icon'>{{ source("/icons/thelia.svg") }}</div>
    </div>
  </div>
  
  {% if type == "searchbar" %}
    <div class='py-[22px] w-[500px] hidden lg:block'>
      {% include '../../Molecules/SearchBar/SearchBar.twig' %}
    </div>
  {% else %}
    <div class='hidden lg:flex lg:gap-[30px]'>
      {% include '../../Molecules/ItemHeader/ItemHeader.twig' with { customText: "Item menu", href: "#" } %}
      {% include '../../Molecules/ItemHeader/ItemHeader.twig' with { customText: "Item menu", href: "#" } %}
      {% include '../../Molecules/ItemHeader/ItemHeader.twig' with { customText: "Item menu", href: "#" } %}
      {% include '../../Molecules/ItemHeader/ItemHeader.twig' with { customText: "Item menu", href: "#" } %}
      {% include '../../Molecules/ItemHeader/ItemHeader.twig' with { customText: "Item menu", href: "#" } %}
    </div>
  {% endif %}

  <div class='flex'>
    {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'search', classes: 'HeaderButton--light', text: 'Search', small: true } %}
    {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'heart-fill', classes: 'HeaderButton--light', text: 'Wishlist', small: true } %}
    {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'account', classes: 'HeaderButton--light', text: 'Login', small: true } %}
    {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'cart', text: 'Cart', classes: 'HeaderButton--light', small: true } %}
    <div class='block lg:hidden'>
      {% include '../../Molecules/HeaderButton/HeaderButton.twig' with {icon: 'menu', text: 'Cart', classes: 'HeaderButton--light', small: true } %}
    </div>
  </div>
</header>
